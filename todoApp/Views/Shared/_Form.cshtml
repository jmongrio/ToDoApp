@model todoApp.Models.ViewModel.TodoViewModel;

<div class="text-center">
    <h1 class="display-4">To Do</h1>
</div>


<div class="todoInput">
    <form  asp-action="Create" id="form-action" method="post">
        <input asp-for="TodoModel.Description" type="text" class="w-100 form-control" placeholder="Task"/>
        <input type="submit" class="btn btn-primary mt-3 w-100" value="Save"/>
    </form>
</div>